            [/ if (game) { /]
                <section class="section-box">
                    <div class="section-header">
                        <h2 class="section-title">Game</h2>
                    </div>
                    <div class="section-content">
                        <div class="overview-row">
                            <p class="game-status">In Cart</p>
                            <div class="img-container">
                                <img class="game-img" src=[/= game.img /]>
                            </div>
                            <div class="game-info">
                                <div class="basic-info">
                                    <h3>[/= game.name /]</h3>
                                    <p class="developer">By: [/= game.developer /]</p>
                                    <p class="published">Published: [/= game.date_published /]</p>
                                    <p class="genres">Genres: [/= game.genre /]</p>
                                </div>
                                <div class="description-container">
                                    <h4>Description</h4>
                                    <p class="description">[/= game.desc /]</p>
                                </div>
                                <div class="buy-info">
                                    <p class="game-price">$[/= game.price /]</p>
                                    <button class="buy-btn">Add to Cart</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                <script>
                    var game_id = [/= game.id /];
                </script>
            [/ } /]
        </div>
        <footer>

        </footer>
    </body>
</html>